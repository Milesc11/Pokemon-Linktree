<html>
<script>
  const pokemonNames = ["bulbasaur", "charmander", "squirtle"]
  function hideAll(){
    pokemonNames.forEach(function(pokemon){
        const myImage = document.getElementById(pokemon + "-image");
         if (myImage){
          myImage.style.display = "none";
        }
       })
  }
  pokemonNames.forEach(function(pokemon){
     const button = document.getElementById(pokemon);
        const myImage = document.getElementById(pokemon + "-image");
        button.addEventListener("click", () => {
          hideAll();
            myImage.style.display = "block";
        });
  })
</script>
